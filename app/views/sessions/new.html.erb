<div class="container-fluid">
	<div class="container col-lg-4 col-lg-offset-4 card">
		<center><h1><%= @title %> </h1></center>
		<%= form_for(:session, url: login_path, :html => { :id => 'login-form'} ) do |f| %>
			<div class="form-group">
				<%= f.email_field :email, :placeholder => "Email",
					:id => "email", :class => "form-control", :required => "true" %>
			</div>
			<div class="form-group">
				<%= f.password_field :password, :placeholder => "Password",
				:id => "password", :class => "form-control", :required => "true" %>
			</div>
			<%= f.submit "LogIn", :class => "btn btn-primary btn-block" %>
		<% end %>
	</div>
</div>
